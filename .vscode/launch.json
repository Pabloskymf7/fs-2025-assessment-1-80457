{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "API Service",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/fs-2025-assessment-1-80457/bin/Debug/net8.0/fs-2025-assessment-1-80457.dll",
            "args": [],
            "cwd": "${workspaceFolder}/fs-2025-assessment-1-80457",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5041"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Frontend App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-frontend",
            "program": "${workspaceFolder}/fs-2025-assessment-2-80457/bin/Debug/net8.0/fs-2025-assessment-2-80457.dll",
            "args": [],
            "cwd": "${workspaceFolder}/fs-2025-assessment-2-80457",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5222"
            }
        }
    ],
    "compounds": [
        {
            "name": "Run All",
            "configurations": [
                "API Service",
                "Frontend App"
            ]
        }
    ]
}