@page "/stations/create"
@using fs_2025_assessment_2_80457.Components
@using fs_2025_assessment_2_80457.Services
@inject NavigationManager NavManager

<PageTitle>Crear Nueva Estación</PageTitle>

## ➕ Crear Nueva Estación

<StationForm Model="_model" OnSubmitted="HandleSuccess" OnCancel="HandleCancel" />

@code {
    private StationForm.StationFormModel _model = new();

    private void HandleSuccess()
    {
        // Redirigir a la lista de estaciones después de crear
        NavManager.NavigateTo("/stations");
    }

    private void HandleCancel()
    {
        // Redirigir a la lista si se cancela
        NavManager.NavigateTo("/stations");
    }
}